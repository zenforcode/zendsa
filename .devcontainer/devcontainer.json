{
  "name": "Multi-lang Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "settings": {
    "terminal.integrated.defaultProfile.linux": "bash"
  },
  "extensions": [
    "ms-python.python",
    "rust-lang.rust-analyzer",
    "ms-vscode.cpptools",
    "vscjava.vscode-java-pack"
  ],
  "postCreateCommand": "rustup update && cargo install --locked cargo-edit",
  "remoteUser": "vscode"
}

